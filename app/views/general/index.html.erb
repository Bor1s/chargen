<div class='available-systems'>
  <div class='row justify-content-md-center'>
    <div class='col-lg-4 text-center'>
      <h2 class='logo-image'>Character Sheets</h2>
    </div>
  </div>

  <div class='row'>
    <div class='col text-center'>
      <h4 class='mt-5 logo-description'><%= t('.create_character_sheet') %></h4>
      <div class='mt-5'>
        <span class="circle-button">
          <i class="fa fa-chevron-down fa-lg" aria-hidden="true"></i>
        </span>
        <hr />
      </div>
    </div>
  </div>

  <div class='row align-items-center text-center logos'>
    <div class='col'>
      <%= link_to fate_new_character_sheet_path, class: 'hvr-grow-rotate' do %>
        <%= image_tag('fate-logo.png', size: '150x80') %>
      <% end %>
    </div>

    <div class='col'>
      <%= link_to gurps_new_character_sheet_path, class: 'hvr-grow-rotate' do %>
        <%= image_tag('gurps-logo.png', size: '200x80') %>
      <% end %>
    </div>

    <div class='col'>
      <%= link_to hero_quest_new_character_sheet_path, class: 'hvr-grow-rotate' do %>
        <%= image_tag('hero-quest-logo.png', size: '250x80') %>
      <% end %>
    </div>
  </div>
</div>
