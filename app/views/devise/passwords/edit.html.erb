<div class='container'>
  <div class='row justify-content-center'>
    <div class='col-xs-12 col-sm-8 col-md-6 col-lg-4'>
      <h2>Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <% if @minimum_password_length %>
            <em class='text-muted'><%= @minimum_password_length %> <%= t('.characters_minimum') %></em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: t('.new_password') %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('.password_confirmation') %>
        </div>

        <div class="form-group">
          <%= f.submit t('.change_password'), class: 'btn btn-success' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
