<div>
  <div class='row justify-content-center'>
    <div class='col-11 col-sm-6 col-md-6 col-lg-4'>
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class='form-group'>
          <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: t('.email') %>
        </div>

        <div class='form-group'>
          <% if @minimum_password_length %>
            <em class='text-muted'><%= @minimum_password_length %> <%= t('.minimum_characters') %></em>
          <% end %><br />
          <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: t('.password') %>
        </div>

        <div class='form-group'>
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: t('.password_confirmation') %>
        </div>

        <div class='form-group'>
          <%= f.submit t('.sign_up'), class: 'btn btn-success' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
