<div class='row p-3 character-sheet-row'>
  <div class='col'>
    <%= hero_quest.character_name %>
  </div>

  <div class='col'>
    <%= hero_quest.class::HUMAN_SYSTEM_NAME %>
  </div>

  <div class='col text-right actions'>
    <%= link_to edit_character_sheet_path(hero_quest), class: 'btn btn-sm btn-secondary' do %>
      <%= fa_icon 'pencil', text: 'Edit' %>
    <% end %>

    <%= link_to export_character_sheet_path(hero_quest), target: '_blank', class: 'btn btn-sm btn-primary' do %>
      <%= fa_icon 'file-pdf-o', text: 'Export' %>
    <% end %>

    <%= link_to character_sheet_path(hero_quest), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } do %>
      <%= fa_icon 'trash-o', text: 'Delete' %>
    <% end %>
  </div>
</div>
