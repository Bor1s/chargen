<% content_for :title do %>
  <%= character_sheet.character_name %>
<% end %>

<!-- General section -->
<div class='row text-center'>
  <div class='col-12 col-md-6 col-lg-6'>
    <h3><%= character_sheet.character_name %></h3>
    <p>(<%= character_sheet.player_name %>)</p>
  </div>

  <div class='col-12 col-md-6 col-lg-6'>
    <h3 class='text-muted'><%= character_sheet.game_name %></h3>
  </div>
</div>
<!-- END General section -->

<!-- Description section -->
<div class='row'>
  <div class='col'>
    <p class='mt-4 wrap'><%= character_sheet.description %></p>
  </div>
</div>
<!-- END Description section -->

<!-- Hero Points section -->
<div class='row mt-4'>
  <div class='col'>
    <h3 class='hero-quest-header text-center'><%= t('.hero_points') %></h3>
  </div>
</div>

<div class='row justify-content-center'>
  <div class='col-4'>
    <p class='display-4 text-center'><b><%= character_sheet.hero_points %></b></p>
  </div>
</div>
<!-- END Hero Points section -->

<div class='row'>
  <!-- Abilities section -->
  <div class='grid-row col-12 col-sm-12 col-md-6 col-lg-4'>
    <div class='row text-center'>
      <div class='col-12'>
        <p class='mt-4'>
          <h4 class='hero-quest-header'><%= t('.abilities') %></h4>
        </p>
      </div>
    </div>

    <% 1.upto CharacterSheets::HeroQuest::ABILITIES do |i| %>
      <% if character_sheet.send("ability#{i}").present? %>
        <div class='row'>
          <div class='col-9 col-sm-8 col-md-8 col-lg-8'>
            <p><%= character_sheet.send("ability#{i}") %></p>
          </div>

          <div class='col-3 col-sm-4 col-md-4 col-lg-4'>
            <p class='text-center'><b><%= character_sheet.send("ability_num#{i}") %></b></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- END Abilities section -->

  <!-- Flaws section -->
  <div class='grid-row col-12 col-sm-12 col-md-6 col-lg-4'>
    <div class='row text-center'>
      <div class='col-12'>
        <p class='mt-4'>
          <h4 class='hero-quest-header'><%= t('.flaws') %></h4>
        </p>
      </div>
    </div>
    <% 1.upto CharacterSheets::HeroQuest::FLAWS do |i| %>
      <% if character_sheet.send("flaw#{i}").present? %>
        <div class='row'>
          <div class='col-9 col-sm-8 col-md-8 col-lg-8'>
            <p><%= character_sheet.send("flaw#{i}") %></p>
          </div>

          <div class='col-3 col-sm-4 col-md-4 col-lg-4'>
            <p class='text-center'><b><%= character_sheet.send("flaw_num#{i}") %></b></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- END Flaws section -->

  <!-- Benefits/penalties section -->
  <div class='grid-row col-12 col-sm-12 col-md-6 col-lg-4'>
    <div class='row text-center'>
      <div class='col-12'>
        <p class='mt-4'>
          <h4 class='hero-quest-header'><%= t('.benefits') %></h4>
        </p>
      </div>
    </div>
    <% 1.upto CharacterSheets::HeroQuest::BENEFITS do |i| %>
      <% if character_sheet.send("benefit#{i}").present? %>
        <div class='row'>
          <div class='col-9 col-sm-8 col-md-8 col-lg-8'>
            <p><%= character_sheet.send("benefit#{i}") %></p>
          </div>

          <div class='col-3 col-sm-4 col-md-4 col-lg-4'>
            <p class='text-center'><b><%= character_sheet.send("benefit_num#{i}") %></b></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- END Flaws section -->
</div>

<!-- Notes section -->
<div class='row mt-4'>
  <div class='col'>
    <div class='form-group'>
      <p class='wrap'><%= character_sheet.notes %></p>
    </div>
  </div>
</div>
<!-- END Notes section -->
<hr />
