<div class='col text-right actions hidden-md-up'>
  <%= link_to edit_character_sheet_path(object), class: 'text-secondary' do %>
    <%= fa_icon 'pencil' %>
  <% end %>

  <%= link_to export_character_sheet_path(object), target: '_blank', class: 'text-primary' do %>
    <%= fa_icon 'file-pdf-o' %>
  <% end %>

  <%= link_to character_sheet_path(object), method: :delete, class: 'text-danger', data: { confirm: 'Are you sure?' } do %>
    <%= fa_icon 'trash-o' %>
  <% end %>
</div>

<div class='col text-right actions hidden-sm-down'>
  <%= link_to edit_character_sheet_path(object), class: 'btn btn-sm btn-secondary' do %>
    <%= fa_icon 'pencil', text: 'Edit' %>
  <% end %>

  <%= link_to export_character_sheet_path(object), target: '_blank', class: 'btn btn-sm btn-primary' do %>
    <%= fa_icon 'file-pdf-o', text: 'Export' %>
  <% end %>

  <%= link_to character_sheet_path(object), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } do %>
    <%= fa_icon 'trash-o', text: 'Delete' %>
  <% end %>
</div>
