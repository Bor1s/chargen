<fieldset id='skills' class='form-group row'>
  <legend><%= t('.skills') %></legend>
    <div class='col-12'>

      <% 0.upto(24) do |i| %>
        <div class='row'>
          <div class='col-4 col-md-4 col-lg-4'>
            <div class='form-group'>
              <%= f.text_field "skill_#{i}".to_sym, class: 'form-control', placeholder: t('.skill') %>
            </div>
          </div>

          <div class='col-2 col-md-2 col-lg-2'>
            <div class='form-group'>
              <%= f.text_field "level_#{i}".to_sym, class: 'form-control', placeholder: t('.level'), title: t('.level'), data: {toggle: 'tooltip', placement: 'top'} %>
            </div>
          </div>

          <div class='col-3 col-md-3 col-lg-3'>
            <div class='form-group'>
              <%= f.text_field "rellevel_#{i}".to_sym, class: 'form-control', placeholder: t('.rel_level'), title: t('.rel_level'), data: {toggle: 'tooltip', placement: 'top'} %>
            </div>
          </div>

          <div class='col-3 col-md-3 col-lg-3'>
            <div class='form-group'>
              <%= f.text_field "skcost_#{i}".to_sym, class: 'form-control', placeholder: t('.skill_cost'), title: t('.skill_cost'), data: {toggle: 'tooltip', placement: 'left'} %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
</fieldset>
