<fieldset id='advantages' class='form-group row'>
  <legend><%= t('.advantages') %></legend>
    <div class='col-12'>

      <% 0.upto(11) do |i| %>
        <div class='row'>
          <div class='col-8 col-md-8 col-lg-8'>
            <div class='form-group'>
              <%= f.text_field "advantages_#{i}".to_sym, class: 'form-control', placeholder: t('.advantage') %>
            </div>
          </div>

          <div class='col-4 col-md-4 col-lg-4'>
            <div class='form-group'>
              <%= f.text_field "advcost_#{i}".to_sym, class: 'form-control', placeholder: t('.adv_cost'), title: t('.adv_cost'), data: {toggle: 'tooltip', placement: 'left'} %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
</fieldset>
