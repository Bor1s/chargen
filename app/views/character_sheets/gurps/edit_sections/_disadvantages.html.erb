<fieldset id='disadvantages' class='form-group row'>
  <legend><%= t('.disadvantages') %></legend>
    <div class='col-12'>

      <% 0.upto(12) do |i| %>
        <div class='row'>
          <div class='col-8 col-md-8 col-lg-8'>
            <div class='form-group'>
              <%= f.text_field "disadvantages_#{i}".to_sym, class: 'form-control', placeholder: t('.disadvantage') %>
            </div>
          </div>

          <div class='col-4 col-md-4 col-lg-4'>
            <div class='form-group'>
              <%= f.text_field "disadcost_#{i}".to_sym, class: 'form-control', placeholder: t('.disad_cost'), title: t('.disad_cost'), data: {toggle: 'tooltip', placement: 'left'} %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
</fieldset>
