        <div class='col-12 col-md-6 col-lg-6'>
          <div class='row'>
            <div class='col-3'>
              <p class='font-weight-bold'>Per</p>
            </div>

            <div class='col-3'>
              <p><%= sheet.perception %></p>
            </div>

            <div class='col-3'>
              <p title="<%= t('.percost') %>" data-toggle='tooltip' data-placement='left'><%= sheet.percost %></p>
            </div>
          </div>
        </div>
      </div>

      <div class='row'>
        <div class='col-12 col-md-6 col-lg-6'>
          <div class='row'>
            <div class='col-3'>
              <p class='font-weight-bold'>HT</p>
            </div>

            <div class='col-4'>
              <p><%= sheet.ht %></p>
            </div>

            <div class='col-4'>
              <p title="<%= t('.htcost') %>" data-toggle='tooltip' data-placement='left'><%= sheet.htcost %></p>
