          <div class='row'>

            <div class='col-3'>
              <p class='font-weight-bold'>FP</p>
            </div>

            <div class='col-3'>
              <p><%= sheet.fp %></p>
            </div>

            <div class='col-3'>
              <p title="<%= t('.fpcurrent') %>" data-toggle='tooltip' data-placement='left'><%= sheet.fpcurrent %></p>
            </div>

            <div class='col-3'>
              <p title="<%= t('.fpcost') %>" data-toggle='tooltip' data-placement='left'><%= sheet.fpcost %></p>
            </div>
          </div>
        </div>
      </div>

    </div>
</fieldset>
