<fieldset id='stats' class='form-group row'>
  <legend><%= t('.stats') %></legend>
    <div class='col-12'>

      <div class='row'>
        <div class='col-12 col-md-6 col-lg-6'>
          <div class='row'>
            <div class='col-3'>
              <p class='font-weight-bold'>ST</p>
            </div>

            <div class='col-4'>
              <p><%= sheet.st %></p>
            </div>

            <div class='col-4'>
              <p title="<%= t('.stcost') %>" data-toggle='tooltip' data-placement='left'><%= sheet.stcost %></p>
            </div>
          </div>
        </div>

        <div class='col-12 col-md-6 col-lg-6'>
          <div class='row'>
            <div class='col-3'>
              <p class='font-weight-bold'>HP</p>
            </div>

            <div class='col-3'>
              <p><%= sheet.hp %></p>
            </div>

            <div class='col-3'>
              <p title="<%= t('.hpcurrent') %>" data-toggle='tooltip' data-placement='left'><%= sheet.hpcurrent %></p>
            </div>

            <div class='col-3'>
              <p title="<%= t('.hpcost') %>" data-toggle='tooltip' data-placement='left'><%= sheet.hpcost %></p>
            </div>
          </div>
        </div>
      </div>

      <div class='row'>
        <div class='col-12 col-md-6 col-lg-6'>
          <div class='row'>
            <div class='col-3'>
              <p class='font-weight-bold'>DX</p>
            </div>

            <div class='col-4'>
              <p><%= sheet.dx %></p>
