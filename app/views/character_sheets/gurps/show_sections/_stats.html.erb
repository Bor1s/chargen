            <div class='col-4'>
              <p title="<%= t('.dxcost') %>" data-toggle='tooltip' data-placement='left'><%= sheet.dxcost %></p>
            </div>
          </div>
        </div>

        <div class='col-12 col-md-6 col-lg-6'>
          <div class='row'>
            <div class='col-3'>
              <p class='font-weight-bold'>Will</p>
            </div>

            <div class='col-3'>
              <p><%= sheet.will %></p>
            </div>

