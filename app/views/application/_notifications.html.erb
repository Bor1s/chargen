<div class='row justify-content-center notifications'>
  <div class='col-xs-12 col-sm-4 col-md-4 col-lg-4 text-center'>
    <% if alert %>
      <section class='bg-danger text-white'><span><%= alert %></span></section>
    <% end %>

    <% if notice %>
      <section class='bg-success text-white'><span><%= notice%></span></section>
    <% end %>
  </div>
</div>
